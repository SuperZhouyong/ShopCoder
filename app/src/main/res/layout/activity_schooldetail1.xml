<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:background="@color/white"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/part1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:background="@color/white"
                tl:layout_scrollFlags="enterAlwaysCollapsed|scroll|snap">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/y80"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_toRightOf="@+id/imageView">

                    <TextView
                        android:id="@+id/tv_school_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京大学"
                        android:textColor="@color/font_1"
                        android:textSize="@dimen/x36" />

                    <LinearLayout
                        android:id="@+id/ll_school_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_school_name"
                        android:layout_marginTop="@dimen/y5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sch_type_type3"
                            style="@style/tv_bg"
                            android:layout_marginRight="@dimen/x10"
                            android:text="双一流" />

                        <TextView
                            android:layout_marginRight="@dimen/x10"
                            android:id="@+id/tv_school_type"
                            style="@style/tv_bg" />


                        <TextView
                            android:layout_marginRight="@dimen/x10"
                            android:id="@+id/tv_school_type_two"
                            style="@style/tv_bg" />
                        <TextView
                            android:visibility="gone"
                            android:text="多批次招生"
                            android:id="@+id/tv_school_type_three"
                            style="@style/tv_bg" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_school_adress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_school_type"
                        android:layout_marginTop="@dimen/y5"
                        android:text="北京市-海淀区"
                        android:textColor="@color/font_2"
                        android:textSize="@dimen/x26" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_below="@id/part1"
                android:background="@color/app_bottom_colour" />
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appbar"
            android:orientation="vertical"
            tl:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_below="@id/division"
                android:background="@color/white"
                tl:tl_indicator_color="@color/app_focus"
                tl:tl_indicator_width_equal_title="true"
                tl:tl_tab_space_equal="false"
                tl:tl_textSelectColor="@color/app_focus"
                tl:tl_textUnselectColor="@color/font_2"
                tl:tl_textsize="@dimen/x28"
                tl:tl_underline_color="#1a000000"
                tl:tl_underline_height="@dimen/y4" />

            <com.intention.sqtwin.widget.NoScrollViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_layout"
                android:background="@color/app_bottom_colour" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/app_main">

        <RelativeLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x30">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x30"
                android:background="@mipmap/return_app" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:layout_toRightOf="@id/ll_back"
            android:text="院校详情"
            android:textColor="@color/white"
            android:textSize="@dimen/x36" />

        <CheckBox
            android:id="@+id/iv_collection"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/y43"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/checkbox_style_white"
            android:button="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/app_unfocus" />
    </RelativeLayout>
</RelativeLayout>