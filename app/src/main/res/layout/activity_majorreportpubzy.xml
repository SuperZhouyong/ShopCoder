<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/title_head"
        layout="@layout/actionbar_title" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_head"
        android:layout_above="@+id/rl_shade"
        android:background="@color/app_bottom_colour" />

    <com.intention.sqtwin.widget.conmonWidget.LoadingTip
        android:id="@+id/loading_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_head" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_shade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rl_stoken"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="购买最新报告"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x30" />

        <Button
            android:id="@+id/bt_pay"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y76"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/shape_bt_bg1"
            android:text="确定"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>