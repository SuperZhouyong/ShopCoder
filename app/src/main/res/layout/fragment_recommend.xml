<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.intention.sqtwin.widget.conmonWidget.LoadingTip
        android:id="@+id/loading_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y200"
            android:layout_marginTop="@dimen/y216"
            android:src="@mipmap/no_record" />

        <TextView
            android:id="@+id/tv_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:text="您尚未测评，没有相应专业可选"
            android:textColor="@color/font_2"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/to_assessment"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y56"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_corner_stroke3"
            android:gravity="center"
            android:text="去测评"
            android:textColor="@color/app_main"
            android:textSize="@dimen/x26" />
    </LinearLayout>
</RelativeLayout>