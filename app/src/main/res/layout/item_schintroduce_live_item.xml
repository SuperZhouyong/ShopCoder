<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- 之前的有20-->
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y204"
        android:layout_marginBottom="@dimen/y40"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/y20"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/x4"
        app:cardElevation="@dimen/x10"
        app:cardMaxElevation="@dimen/x10">

        <!--   <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
   -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y79"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/jiangjin" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"

                android:layout_marginTop="@dimen/y11"
                android:text="食堂条件"
                android:textSize="@dimen/x30" />


            <!--</RelativeLayout>-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>