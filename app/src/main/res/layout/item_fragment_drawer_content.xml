<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center"
    android:orientation="vertical">
<!-- android:layout_width="@dimen/x166"
        android:layout_height="@dimen/y70"-->
    <TextView
        android:layout_marginBottom="@dimen/y8"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginLeft="@dimen/x8"
        android:layout_height="@dimen/y70"
        android:layout_width="match_parent"
        android:id="@+id/tv_content"
        android:layout_centerInParent="true"
        android:background="@color/gray"
        android:gravity="center"
        android:text="北京"
        android:textColor="@color/font_1"
        android:textSize="@dimen/x24" />
    <ImageView
        android:id="@+id/iv_right"
        android:visibility="invisible"
        android:layout_alignRight="@id/tv_content"
        android:layout_alignBottom="@id/tv_content"
        android:src="@mipmap/selected"
        android:layout_width="@dimen/x34"
        android:layout_height="@dimen/y34" />

</RelativeLayout>