<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y96"
    android:background="@color/title_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rel_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"

            android:scaleType="fitCenter"
            android:src="@mipmap/return_app" />
    </RelativeLayout>

    <!--  <TextView
          android:id="@+id/left_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/rel_back"
          android:text="Title"
          android:textColor="#ffffff"
          android:textSize="@dimen/x36"
          android:visibility="visible" />-->

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x100"
        android:background="@color/title_bg">

        <TextView
            android:id="@+id/Tv_time_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/y20"
            android:text="拍卖时间"
            android:textColor="@color/white"
            android:textSize="@dimen/x24" />

        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/Tv_time_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x100"
            android:layout_toRightOf="@id/Tv_time_one"
            android:text="11.20 10:00-11.21 10:00"
            android:textColor="@color/white"
            android:textSize="@dimen/x36" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:src="@mipmap/share" />
    </RelativeLayout>
</RelativeLayout>