<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Name_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/regist_name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center"
            android:text="姓名" />

        <com.intention.sqtwin.widget.ClearEditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_name"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/account_textcolor_focus"
            android:textColorHint="@color/account_textcolor_unfocus"
            android:textCursorDrawable="@drawable/shape_edittext_cursour"
            android:textSize="@dimen/x26" />


    </RelativeLayout>

    <include layout="@layout/division_short" />

    <RelativeLayout
        android:id="@+id/Sex_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_sex"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/regist_sex"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center"
            android:text="性别" />

        <LinearLayout
            android:id="@+id/ll_sex"
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_man"
                android:layout_width="0dp"
                android:layout_height="@dimen/y54"
                android:layout_weight="1"
                android:background="@drawable/shape_left_corner_unselect"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/tv_woman"
                android:layout_width="0dp"
                android:layout_height="@dimen/y54"
                android:layout_weight="1"
                android:background="@drawable/shape_right_corner_unselect"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x24" />
        </LinearLayout>
