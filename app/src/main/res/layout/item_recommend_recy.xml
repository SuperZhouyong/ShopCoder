            <TextView
                android:id="@+id/school_type985"
                style="@style/tv_bg"
                android:layout_marginRight="@dimen/x10"
                android:layout_toRightOf="@+id/iv_school"
                android:text="985" />

            <TextView
                android:id="@+id/school_type211"
                style="@style/tv_bg"
                android:layout_below="@+id/tv_school_name"
                android:layout_toRightOf="@+id/school_type985"
                android:text="211" />

            <TextView
                android:id="@+id/school_rank"
                style="@style/tv_bg"
                android:layout_below="@+id/tv_school_name"
                android:layout_toRightOf="@+id/school_type211"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/shape_textview_bg_fill"
                android:text=""
                android:textColor="@color/font_2" />
        </LinearLayout>

        <!--</LinearLayout>-->
        <CheckBox
            android:id="@+id/iv_collection"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/y43"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/checkbox_style"
            android:button="@null" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_fold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/part1"
        android:gravity="center"
        android:paddingBottom="@dimen/y18"
        android:paddingTop="@dimen/y20">

        <ImageView
            android:id="@+id/iv_fold"
            android:layout_width="@dimen/x30"
            android:layout_height="wrap_content"
            android:src="@mipmap/fold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_fold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_fold">

        <TextView
            android:visibility="gone"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:text="适合你的专业："
            android:textColor="@color/textcolor2"
            android:textSize="@dimen/x24" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2" />
    </RelativeLayout>

