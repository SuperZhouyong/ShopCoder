                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y10"
                    android:background="@color/app_bottom_colour"
                    android:orientation="vertical" />

                <LinearLayout
                    android:id="@+id/ll_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_bonus"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y70"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_constant_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x30"
                            android:text="使用红包"
                            android:textColor="@color/font_1"
                            android:textSize="@dimen/x28" />

                        <TextView
                            android:id="@+id/Tv_Bonus_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@id/tv_constant_left"
                            android:text=""
                            android:textColor="@color/font_3"
                            android:textSize="@dimen/x22" />

                        <TextView
                            android:id="@+id/Tv_Bonus1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@id/Tv_Bonus_detail"
                            android:text=""
                            android:textColor="@color/font_3"
                            android:textSize="@dimen/x22" />

                        <TextView
                            android:id="@+id/Tv_Bonus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@id/Tv_Bonus1"
                            android:text=""
                            android:textColor="@color/orange"
                            android:textSize="@dimen/x22" />

                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/switch_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x30"
                            android:checked="true"
                            android:textColor="@color/white"
                            app:kswTintColor="@color/app_main" />
                        <!--app:kswTextOff="关"
                          app:kswBackColor="@color/app_main"
                            kswk
                            app:kswThumbColor="@color/white"
                                            app:kswTextOn="开"-->
                    </RelativeLayout>

                    <include layout="@layout/division" />

                    <RelativeLayout
                        android:id="@+id/rl_discount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y70"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x30"
                            android:text="使用套餐优惠券"
                            android:textColor="@color/font_1"
                            android:textSize="@dimen/x28" />

                        <TextView
                            android:id="@+id/Tv_discount_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@id/tv_discount"
                            android:text="元"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/x22" />

                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/switch_button_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x30"
                            android:checked="true"
                            android:textColor="@color/white"
                            app:kswTintColor="@color/app_main" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y10"
                        android:background="@color/app_bottom_colour"
                        android:orientation="vertical" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y70"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x30"
                    android:text="选择支付方式"
                    android:textColor="@color/font_1"
                    android:textSize="@dimen/x24" />

                <android.support.v7.widget.RecyclerView
