<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y180"
    android:layout_marginTop="@dimen/y10"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <ImageView
        android:layout_marginLeft="@dimen/x30"
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y120"
        android:layout_centerVertical="true" />
   <RelativeLayout
       android:gravity="center_vertical"
       android:layout_toRightOf="@id/iv_icon"
       android:id="@+id/rel_iv"
       android:layout_width="wrap_content"
       android:layout_height="match_parent">




    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"

        android:text="专家名字"
        android:textColor="@color/font_4"
        android:textSize="@dimen/x38" />

    <TextView
        android:id="@+id/tv_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_name"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toRightOf="@id/tv_name"
        android:background="@drawable/shape_identity"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:text="首席专家"
        android:textColor="@color/font_4" />

    <TextView
        android:id="@+id/tv_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/y16"
        android:text="服务省份"
        android:textColor="@color/font_1" />

    <TextView
        android:id="@+id/tv_goodAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_below="@id/tv_service"
        android:layout_marginTop="@dimen/y6"
        android:text="擅长领域"
        android:textColor="@color/font_1" />

    <TextView

        android:id="@+id/tv_service_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y16"
        android:layout_toRightOf="@id/tv_service"
        android:ellipsize="end"
        android:text="服务省份"
        android:textColor="@color/font_3" />

    <TextView
        android:id="@+id/tv_goodAt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_service"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y6"
        android:layout_toRightOf="@id/tv_goodAt"
        android:ellipsize="end"
        android:text="擅长领域"
        android:textColor="@color/font_3" />
   </RelativeLayout>
</RelativeLayout>