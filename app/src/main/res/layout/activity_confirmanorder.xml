    <TextView
        android:id="@+id/tv_endline"
        android:background="#fff6e5"
        android:gravity="center"
        android:textColor="@color/font_2"
        android:textSize="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y56" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/bt_confirm_pay"
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/buy_immediately"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/Tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@id/bt_confirm_pay"
            android:text="￥0"
            android:textColor="@color/price_commodity"
            android:textSize="@dimen/x28" />


        <TextView
            android:id="@+id/Tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@id/Tv_total_money"
            android:text="合计:"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

