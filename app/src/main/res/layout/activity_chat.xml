<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rel_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/x30">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:scaleType="fitCenter"
                android:src="@mipmap/list_return" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/rel_back"
            android:text="对话列表"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x36"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/rl_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x30">

            <ImageView
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/y8"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_more_1" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/app_bottom_colour" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_below="@id/rl_title"
        android:layout_marginBottom="@dimen/y10"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_phone" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@id/imageView"
            android:gravity="center"
            android:text="12345678900"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/x30" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_chat"
        android:layout_below="@id/rl_phone">
        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/Lrecycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.intention.sqtwin.widget.conmonWidget.LoadingTip
            android:id="@+id/loading_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <com.intention.sqtwin.widget.MaxHeightRelativeLayout
        android:id="@+id/rl_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:minHeight="@dimen/y56">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toLeftOf="@+id/tv_submit"
            android:background="@drawable/shape_corner_white"
            android:hint="输入您的问题..."
            android:maxHeight="@dimen/y250"
            android:minHeight="@dimen/y56"
            android:paddingBottom="@dimen/y14"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16"
            android:paddingTop="@dimen/y14"
            android:text=""
            android:textColor="@color/font_1"
            android:textColorHint="@color/font_3"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:text="提交"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/x30" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/app_unfocus" />
    </com.intention.sqtwin.widget.MaxHeightRelativeLayout>
</RelativeLayout>