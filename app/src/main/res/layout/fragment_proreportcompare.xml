<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.intention.sqtwin.widget.DropDownMenu
        android:visibility="gone"
        android:id="@+id/dropmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuSelectedIcon="@mipmap/list_up"
        app:ddmenuTextSize="@dimen/x28"
        app:ddmenuUnselectedIcon="@mipmap/list_down"
        app:ddtextSelectedColor="@color/app_focus"
        app:ddtextUnselectedColor="@color/textcolor2"
        app:ddunderlineColor="@color/app_unfocus" />

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/recycle_view"
        android:layout_below="@id/dropmenu"
        android:background="@color/app_bottom_colour"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.intention.sqtwin.widget.conmonWidget.LoadingTip
        android:id="@+id/loading_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>