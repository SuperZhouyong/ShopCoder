                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x34"
                android:text="期中考试"
                android:textColor="@color/switch_closecolor"
                android:textSize="@dimen/x24" />

            <ImageView
