<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include

        android:id="@+id/title"
        layout="@layout/actionbar_title" />

    <RelativeLayout
        android:id="@+id/rel_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:layout_below="@id/title"
        android:background="@mipmap/info_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="账户余额（元）"
            android:textColor="@color/white"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/tv_num_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y20"
            android:text="16812.00"
            android:textColor="@color/white"
            android:textSize="@dimen/x50"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="@dimen/x560"
        android:layout_height="@dimen/y70"
        android:layout_below="@id/rel_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/tv_bg_confirm"
        android:gravity="center"
        android:text="充值"
        android:textColor="@color/white"
        android:textSize="@dimen/x30" />
    <!--android:background="@drawable/tv_bg_cancel"-->
    <TextView
        android:id="@+id/tv_withdrawal"
        android:layout_width="@dimen/x560"
        android:layout_height="@dimen/y70"
        android:layout_below="@id/tv_recharge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/tv_agent_price"

        android:gravity="center"
        android:text="充值"
        android:textColor="@color/font_2"
        android:textSize="@dimen/x30" />

    <RelativeLayout
        android:layout_alignLeft="@id/tv_withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被冻结的金额" />


    </RelativeLayout>

</RelativeLayout>