<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:layout_marginTop="@dimen/y10"
    android:background="@drawable/shape_item_reco_recy">


    <RelativeLayout
        android:id="@+id/part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/y30"
        android:paddingTop="@dimen/y30">

        <ImageView
            android:id="@+id/iv_school"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:scaleType="fitCenter"
            android:src="@mipmap/demo" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_school">

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y10"
                android:maxWidth="@dimen/x310"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/x20"
                android:text="北京大学"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/x32"
                android:textStyle="bold" />
            <TextView
                android:layout_toRightOf="@id/tv_school_name"
                android:id="@+id/sch_rank"
                android:layout_marginLeft="@dimen/x10"
                android:layout_alignBottom="@id/tv_school_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y34"
                android:layout_marginRight="@dimen/x10"
                android:text=""
                android:textColor="@color/font_2"
                android:textSize="@dimen/x26" />
            <LinearLayout
                android:id="@+id/ll_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_below="@+id/tv_school_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sch_type_type3"
                    style="@style/tv_bg"
                    android:layout_below="@+id/tv_school_name"
                    android:layout_marginRight="@dimen/x10"
                    android:text="双一流" />

                <TextView
                    android:id="@+id/sch_type_type1"
                    style="@style/tv_bg"
                    android:layout_marginRight="@dimen/x10"
                    android:text="985" />

                <TextView
                    android:id="@+id/sch_type_type2"
                    style="@style/tv_bg"
                    android:layout_marginRight="@dimen/x10"
                    android:text="211" />

                <TextView
                    android:id="@+id/sch_type_type4"
                    style="@style/tv_bg"
                    android:layout_marginRight="@dimen/x10"
                    android:text="多批次招生" />

            </LinearLayout>


            <TextView
                android:id="@+id/school_detail"
                android:layout_width="@dimen/x480"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_type"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginTop="@dimen/y10"
                android:maxLines="1"
                android:text="学校介绍"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x29" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_collection"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y150"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/part1"
        android:clickable="true"
        android:gravity="center">

        <CheckBox
            android:id="@+id/iv_collection"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/y43"
            android:layout_marginRight="@dimen/x20"
            android:background="@mipmap/collected"
            android:button="@null" />
    </LinearLayout>
</RelativeLayout>