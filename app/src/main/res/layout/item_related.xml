<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/y30">

    <RelativeLayout
        android:id="@+id/rl_item_title1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y85"
        android:gravity="center_vertical">

        <View
            android:id="@+id/nullview1"
            android:layout_width="@dimen/x4"
            android:layout_height="@dimen/y40"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/app_focus" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_toRightOf="@id/nullview1"
            android:text="相关职业"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x30" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_item_title1" />

    <TextView
        android:id="@+id/tv_nulldata"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:layout_below="@id/rl_item_title1"
        android:gravity="center"
        android:text="暂无数据"
        android:textColor="@color/orange"
        android:textSize="@dimen/x26"
        android:visibility="gone" />

</RelativeLayout>