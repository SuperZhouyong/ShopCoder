<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70"
        android:layout_marginTop="@dimen/y40"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!--微信-->
        <LinearLayout
            android:id="@+id/ll_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/y88"
                android:src="@mipmap/wx_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="微信好友"
                android:textColor="@color/font_2"
                android:textSize="@dimen/x26" />
        </LinearLayout>
        <!--微博-->
        <LinearLayout
            android:id="@+id/ll_wb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/y88"
                android:src="@mipmap/wb_icon_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="新浪微博"
                android:textColor="@color/font_2"
                android:textSize="@dimen/x26" />

        </LinearLayout>
        <!--QQ-->
        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/y88"
                android:src="@mipmap/qq_icon_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="QQ好友"
                android:textColor="@color/font_2"
                android:textSize="@dimen/x26" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_qqspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/y88"
                android:src="@mipmap/qqspace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="QQ空间"
                android:textColor="@color/font_2"
                android:textSize="@dimen/x26" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y40"
        android:background="@color/app_bottom_colour" />

    <Button
        android:id="@+id/bt_cancel"
        style="?borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:text="取消"
        android:textColor="@color/font_1"
        android:textSize="@dimen/x28" />
</LinearLayout>