<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/part1"
        layout="@layout/toolbar_title" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:layout_below="@id/part1"
        android:background="@color/app_bottom_colour"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="每次考试成绩只能修改一次"
        android:textColor="@color/font_2"
        android:textSize="@dimen/x22" />

    <LinearLayout
        android:id="@+id/part2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hint"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/rl_term"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学期"
                android:textColor="@color/font_1"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/tv_term_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x34"
                android:text="高一上学期"
                android:textColor="@color/switch_closecolor"
                android:textSize="@dimen/x24" />

            <ImageView
                android:id="@+id/iv_term"
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/y26"
                android:layout_alignParentRight="true"
                android:src="@mipmap/list_enter" />
        </RelativeLayout>

        <include layout="@layout/division_short" />

        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/rl_exam_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30">

