<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ask_portrait"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y20" />

    <TextView
        android:id="@+id/tv_ask_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y20"
        android:layout_toRightOf="@id/iv_ask_portrait"
        android:text=""
        android:textColor="@color/font_1"
        android:textSize="@dimen/x28"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ask_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ask_name"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:layout_toRightOf="@id/iv_ask_portrait"
        android:text=""
        android:textColor="@color/font_2"
        android:textSize="@dimen/x26" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ask_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y16"
        android:layout_toRightOf="@id/iv_ask_portrait"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_height="@dimen/y80"
            android:layout_marginRight="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_blue"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="@dimen/y80"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_red"
            android:gravity="center"
            android:text="不同意"
            android:textColor="@color/white"
            android:textSize="@dimen/x28" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ask_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_select"
        android:layout_marginBottom="@dimen/y2"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y10"
        android:layout_toRightOf="@id/iv_ask_portrait"
        android:text=""
        android:textColor="@color/font_3"
        android:textSize="@dimen/x20" />

    <ImageView
        android:id="@+id/iv_division"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y14"
        android:layout_below="@id/tv_ask_time"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:src="@mipmap/iv_devision" />

    <RelativeLayout
        android:id="@+id/rl_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_division"
        android:paddingLeft="@dimen/x30"
        android:paddingTop="@dimen/y20">

        <ImageView
            android:id="@+id/iv_answer_portrait"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/y88" />

        <TextView
            android:id="@+id/tv_answer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/iv_answer_portrait"
            android:text=""
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_answer_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_answer_name"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@id/iv_answer_portrait"
            android:text=""
            android:textColor="@color/font_2"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_answer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_answer_content"
            android:layout_marginBottom="@dimen/y16"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/iv_answer_portrait"
            android:text=""
            android:textColor="@color/font_3"
            android:textSize="@dimen/x20" />
    </RelativeLayout>


</RelativeLayout>