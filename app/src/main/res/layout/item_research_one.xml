<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y260"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x30"
    android:paddingRight="@dimen/x30">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y60"
                android:src="@mipmap/shuoshi" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv1"
                android:text="53"
                android:textColor="@color/font_1"
                android:textSize="@dimen/x30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv1"
                android:text="硕士点"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x20" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y60"
                android:src="@mipmap/boshi" />

            <TextView

                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv2"
                android:text="53"
                android:textColor="@color/font_1"
                android:textSize="@dimen/x30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv2"
                android:text="博士点"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x20" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y60"
                android:src="@mipmap/zhongdianzhuanye" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv3"
                android:text="53"
                android:textColor="@color/font_1"
                android:textSize="@dimen/x30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv3"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv3"
                android:text="重点专业"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x20" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x80">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y60"
                android:src="@mipmap/shiyanshi" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv4"
                android:text="53"
                android:textColor="@color/font_1"
                android:textSize="@dimen/x30"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/iv4"
                android:text="重点实验室"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x20" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>