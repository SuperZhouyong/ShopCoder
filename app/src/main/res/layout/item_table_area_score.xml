<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/y248"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_batch_name"
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x10"
            android:text="本科一批"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_batch_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y15"
            android:text="2017\n2016\n2015\n2014\n平均"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_batch_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y15"
            android:text="2017\n2016\n2015\n2014\n平均"
            android:textColor="@color/app_main"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_batch_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y15"
            android:text="2017\n2016\n2015\n2014\n平均"
            android:textColor="@color/app_main"
            android:textSize="@dimen/x26" />
    </LinearLayout>
</LinearLayout>