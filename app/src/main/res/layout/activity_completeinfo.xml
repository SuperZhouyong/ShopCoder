    <include layout="@layout/toolbar_title" />

    <include layout="@layout/division_long" />

    <RelativeLayout
        android:id="@+id/Account_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/login_shape_unfocus">


        <ImageView
            android:id="@+id/iv_household"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/registhousehold"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center_vertical"
            android:src="@mipmap/list_enter" />

        <TextView
            android:id="@+id/user_houlseId"
            style="@style/phone_password_login_regist"
            android:layout_height="@dimen/y88"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@id/iv_household"
            android:hint="高考所在地"
            android:textColor="@color/font_1"
            android:textColorHint="@color/font_3" />


    </RelativeLayout>

    <include layout="@layout/division_short" />

    <RelativeLayout
        android:id="@+id/Name_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/login_shape_unfocus">

        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/regist_name"
            android:visibility="gone" />

        <com.intention.sqtwin.widget.ClearEditText
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_name"
            android:layout_toLeftOf="@+id/ll_sex"
            android:background="@null"
            android:hint="真实姓名"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/account_textcolor_focus"
            android:textColorHint="@color/account_textcolor_unfocus"
            android:textCursorDrawable="@drawable/shape_edittext_cursour"
            android:textSize="@dimen/x26" />

        <LinearLayout
            android:id="@+id/ll_sex"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="@dimen/x150"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_man"
                android:layout_width="0dp"
                android:layout_height="@dimen/y54"
                android:layout_weight="1"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/tv_woman"
                android:layout_width="0dp"
                android:layout_height="@dimen/y54"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x24" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/division_short" />

