<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_title" />

    <include layout="@layout/division_long" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_below="@id/part1"
        android:background="@color/white"
        tl:tl_indicator_color="@color/app_focus"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/app_focus"
        tl:tl_textUnselectColor="@color/font_2"
        tl:tl_textsize="@dimen/x28"
        tl:tl_underline_color="@color/white"
        tl:tl_underline_height="@dimen/y4" />


    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y68"
        android:background="@color/app_bottom_colour"
        android:gravity="center|left"
        android:paddingLeft="@dimen/x30"
        android:text="注：过期时间自购买之日起计算"
        android:textColor="@color/font_2"
        android:textSize="@dimen/x22" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>