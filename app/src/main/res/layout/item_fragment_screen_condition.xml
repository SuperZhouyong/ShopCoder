<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y15"
            android:text="我的条件："
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y15"
            android:layout_toRightOf="@id/tv1"
            android:text="北京 文科 640"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y10"
            android:text="院校所在地："
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_areas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_condition"
            android:layout_marginRight="@dimen/x80"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@id/tv2"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="北京 天津 上海 内蒙古"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/x26" />

        <LinearLayout
            android:id="@+id/ll_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:text="选考科目："
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/tv_subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:layout_toRightOf="@id/tv2"
                android:text="物理 化学 生物"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/x26" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_subjects"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:text="筛选时间："
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_subjects"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@id/tv3"
            android:text="2017.11.01 12:25"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/x26" />

        <ImageView
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/list_enter" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/app_bottom_colour" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bottom_colour" />
