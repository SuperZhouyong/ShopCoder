    <ImageView
        android:id="@+id/iv_recommend"
        android:layout_width="@dimen/x54"
        android:layout_height="@dimen/y54"
        android:src="@mipmap/recommend"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/part1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:layout_marginLeft="@dimen/x25"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_school"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/demo" />

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y30"
            android:layout_toRightOf="@id/iv_school"
            android:text="北京大学"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/x32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_school_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_school_name"
            android:layout_alignBottom="@+id/tv_school_name"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toEndOf="@+id/tv_school_name"
            android:layout_toRightOf="@+id/tv_school_name"
            android:text="北京"
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/x28" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_school_name"
            android:layout_below="@+id/tv_school_name"
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal">

