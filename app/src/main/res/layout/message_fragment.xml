<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_boot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bottom_colour"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/shopcart_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@id/rel_back"
            android:text="服务"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x36"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_help"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ll_more"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/selector_help" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x30"
                android:background="@drawable/selector_more" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:layout_below="@id/shopcart_title"
        android:layout_margin="@dimen/y10"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x12"
            android:src="@drawable/icon_code_pressed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用激活码"
            android:textColor="@color/main_blue"
            android:textSize="@dimen/x24" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_code"
        android:layout_marginBottom="@dimen/y96" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rel_left"
            android:layout_width="@dimen/x94"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_check_box"
                android:layout_width="@dimen/x34"
                android:layout_height="@dimen/y34"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:scaleType="fitXY"
                android:src="@mipmap/select_off" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/app_bottom_colour" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/rel_left"
            android:gravity="center_vertical"
            android:text="全选" />

        <Button
            android:id="@+id/bt_confirm_pay"
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/buy_immediately"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/Tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@id/bt_confirm_pay"
            android:text="￥0.0"
            android:textColor="@color/price_commodity"
            android:textSize="@dimen/x28" />


        <TextView
            android:id="@+id/Tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@id/Tv_total_money"
            android:text="合计:"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <com.intention.sqtwin.widget.conmonWidget.LoadingTip
        android:id="@+id/ShopMall_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shopcart_title" />

</RelativeLayout>