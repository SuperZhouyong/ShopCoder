<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <include layout="@layout/item_goods_home_one"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x22"
        android:paddingBottom="@dimen/y20"
        android:paddingTop="@dimen/y20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_lot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍品"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x22" />

            <TextView
                android:id="@+id/tv_lot_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/tv_lot_name"
                android:text="126件"
                android:textColor="@color/font_4"
                android:textSize="@dimen/x26" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_price_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出价"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x22" />

            <TextView
                android:id="@+id/tv_price_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/tv_price_name"
                android:text="365次"
                android:textColor="@color/font_4"
                android:textSize="@dimen/x26" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x22">

            <TextView
                android:id="@+id/tv_fouce_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x22" />

            <TextView
                android:id="@+id/tv_fouce_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/tv_fouce_name"
                android:text="617人"
                android:textColor="@color/font_4"
                android:textSize="@dimen/x26" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>