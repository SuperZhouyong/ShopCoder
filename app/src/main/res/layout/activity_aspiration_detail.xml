<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/x30">

            <ImageView
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/list_return" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/ll_back"
            android:text="志愿筛选清单"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/x36" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            android:text="保存"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/x30"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/app_unfocus" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/x20">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:text="我的条件"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center_vertical"
            android:text="2017.11.2 21:55"
            android:textColor="@color/font_3"
            android:textSize="@dimen/x24"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_division"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@id/tv_name"
            android:background="@color/app_bottom_colour" />


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_division"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y18"
            android:text="我的条件："
            android:textColor="@color/textcolor3"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_division"
            android:layout_marginTop="@dimen/y18"
            android:layout_toRightOf="@id/tv1"
            android:text="文科"
            android:textColor="@color/textcolor1"
            android:textSize="@dimen/x26" />

        <LinearLayout
            android:id="@+id/ll_level"
            android:layout_below="@id/tv1"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="选修科成绩："
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/tv_areas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_condition"
                android:layout_toRightOf="@id/tv2"
                android:text="物理A/化学B"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/x26" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_level"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:text="选考科目："
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/tv_subjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:layout_toRightOf="@id/tv2"
                android:text="物理 化学 政治"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/x26" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_majors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_subjects"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:text="感兴趣的专业："
                android:textColor="@color/textcolor3"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/tv_majors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y10"
                android:text="北京 天津 上海 内蒙古"
                android:textColor="@color/textcolor1"
                android:textSize="@dimen/x26" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:text="候选志愿清单"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x26" />

        <ImageView
            android:id="@+id/iv_division1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@id/textView"
            android:background="@color/app_bottom_colour" />

        <TextView
            android:id="@+id/tv_school_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y65"
            android:layout_below="@id/iv_division1"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y65"
            android:layout_below="@id/iv_division1"
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@id/tv_school_num"
            android:gravity="center_vertical"
            android:textSize="@dimen/x26"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:text="志愿筛选表"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x26" />

        <ImageView
            android:id="@+id/iv_division2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@id/textView1"
            android:background="@color/app_bottom_colour" />

        <TextView
            android:id="@+id/tv_school_num1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y65"
            android:layout_below="@id/iv_division2"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y65"
            android:layout_below="@id/iv_division2"
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@id/tv_school_num1"
            android:gravity="center_vertical"
            android:textSize="@dimen/x26"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/shape_bt_bg"
        android:gravity="center"
        android:text="继续筛选志愿"
        android:textColor="@color/white"
        android:textSize="@dimen/x30" />
</LinearLayout>