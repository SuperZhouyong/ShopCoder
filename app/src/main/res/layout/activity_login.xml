<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/toolbar_title" />

    <include

        layout="@layout/division_long" />

    <RelativeLayout
        android:id="@+id/login_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y50"
        android:gravity="center">


        <RelativeLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_below="@id/login_icon"

            android:layout_marginTop="@dimen/y50"
            android:background="@drawable/login_shape_unfocus"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"

                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/regist_phone" />

            <com.intention.sqtwin.widget.ClearEditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y88"
                android:layout_toRightOf="@id/iv_phone"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:textColor="@color/account_textcolor_focus"
                android:textColorHint="@color/account_textcolor_unfocus"
                android:textCursorDrawable="@drawable/shape_edittext_cursour"
                android:textSize="@dimen/x26" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_below="@id/username_layout"
            android:addStatesFromChildren="true"
            android:background="@drawable/login_shape_unfocus"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/regist_password" />

            <com.intention.sqtwin.widget.ClearEditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="@dimen/y88"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码由6-18位字符组成"
                android:inputType="textPassword"
                android:maxLength="18"
                android:paddingLeft="@dimen/x30"
                android:textColor="@color/account_textcolor_focus"
                android:textColorHint="@color/account_textcolor_unfocus"
                android:textCursorDrawable="@drawable/shape_edittext_cursour"
                android:textSize="@dimen/x26" />

            <RelativeLayout

                android:id="@+id/rel_eye"
                android:layout_width="@dimen/x92"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/bt_pwd_eye"
                    android:layout_width="@dimen/x38"
                    android:layout_height="@dimen/y24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x30"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/password_hide" />
            </RelativeLayout>


        </LinearLayout>

