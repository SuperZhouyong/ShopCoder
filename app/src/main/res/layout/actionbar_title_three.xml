<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/title_bg"
    android:layout_height="@dimen/y96">
    <ImageView
        android:src="@mipmap/logo"
        android:layout_marginLeft="@dimen/x22"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/x85"
        android:layout_height="@dimen/y55" />
    <RelativeLayout
        android:id="@+id/rel_search"
        android:background="@drawable/shape_bg_search"
        android:layout_marginLeft="@dimen/x130"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/y60">
        <!--search_black-->
        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/home_search"

            android:layout_centerVertical="true"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/y35" />
    </RelativeLayout>

    <ImageView
        android:layout_marginRight="@dimen/x22"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_love"
        android:src="@mipmap/home_focus"
        android:layout_marginLeft="@dimen/x22"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40" />
    <ImageView
        android:layout_toLeftOf="@id/iv_love"
        android:id="@+id/iv_readme"
        android:src="@mipmap/remind_logo"

        android:layout_centerVertical="true"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40" />
</RelativeLayout>