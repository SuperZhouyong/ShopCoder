<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y88"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_intention_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/intention_number_bg"
            android:padding="@dimen/x10"
            android:text="志愿1"
            android:textColor="@color/white"
            android:textSize="@dimen/x19" />

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@id/tv_intention_num"
            android:ellipsize="end"
            android:maxLength="14"
            android:text="北京理工科技大学"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x6"
            android:layout_toRightOf="@id/tv_school_name"
            android:maxLength="8"
            android:text="专专业专专业专专业"
            android:textColor="@color/font_3"
            android:textSize="@dimen/x24" />

        <RelativeLayout
            android:id="@+id/rel_delete"
            android:layout_width="@dimen/x98"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10">

            <ImageView
                android:id="@+id/im_drag"
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y38"
                android:layout_centerInParent="true"


                android:src="@mipmap/intention_fore_delete" />

        </RelativeLayout>


    </RelativeLayout>

    <include layout="@layout/division_long" />
</LinearLayout>