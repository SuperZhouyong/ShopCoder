<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/app_focus">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/return_app" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/ll_back"
            android:layout_toRightOf="@+id/ll_back"
            android:text="专业介绍"
            android:textColor="@color/white"
            android:textSize="@dimen/x36" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:background="@color/app_unfocus" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/y38"
                android:paddingLeft="@dimen/x30"
                android:paddingTop="@dimen/y38">

                <TextView
                    android:id="@+id/tv_major_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/x40" />

                <TextView
                    android:id="@+id/tv_major_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_major_name"
                    android:layout_toRightOf="@id/tv_major_name"
                    android:paddingBottom="@dimen/y5"
                    android:textColor="@color/font_1"
                    android:textSize="@dimen/x30" />

                <RelativeLayout
                    android:id="@+id/rl_title_o"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_major_name">

                    <TextView
                        android:id="@+id/tv_sch_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y20"
                        android:text="北京大学"
                        android:textColor="@color/font_2"
                        android:textSize="@dimen/x30" />

                    <LinearLayout
                        android:id="@+id/ll_part7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_sch_name"
                        android:layout_marginTop="@dimen/y20"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x37"
                            android:layout_height="@dimen/y30"
                            android:layout_marginRight="@dimen/x10"
                            android:src="@mipmap/xuewei" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="授予学位:"
                            android:textColor="@color/font_2"
                            android:textSize="@dimen/x26" />

                        <TextView
                            android:id="@+id/tv_major_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="法学学士"
                            android:textColor="@color/font_2"
                            android:textSize="@dimen/x26" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_sch_name"
                        android:layout_marginLeft="@dimen/x390"
                        android:layout_marginTop="@dimen/y20"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x37"
                            android:layout_height="@dimen/y30"
                            android:layout_marginRight="@dimen/x10"
                            android:src="@mipmap/xuezhi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学制:"
                            android:textColor="@color/font_2"
                            android:textSize="@dimen/x26" />

                        <TextView
                            android:id="@+id/tv_major_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="四年"
                            android:textColor="@color/font_2"
                            android:textSize="@dimen/x26" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_part6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_part7"
                        android:layout_marginTop="@dimen/y20"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="@dimen/x37"
                            android:layout_height="@dimen/y30"
                            android:layout_marginRight="@dimen/x10"
                            android:src="@mipmap/xuankaokemu" />

                        <TextView
                            android:id="@+id/tv_name_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选考科目:"
                            android:textColor="@color/font_2"
                            android:textSize="@dimen/x26" />

                        <TextView
                            android:id="@+id/tv_subjects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="历史 地理 政治"
                            android:textColor="@color/font_2"
                            android:textSize="@dimen/x26" />

                        <TextView
                            android:id="@+id/tv_hint_s"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(3+3模式必选科目)"
                            android:textColor="@color/font_3"
                            android:textSize="@dimen/x26" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y10" />

            <RelativeLayout
                android:id="@+id/rl_item_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/nullview1"
                    android:layout_width="@dimen/x4"
                    android:layout_height="@dimen/y40"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@color/app_focus" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y85"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toRightOf="@id/nullview1"
                    android:gravity="center_vertical"
                    android:text="专业介绍"
                    android:textColor="@color/font_1"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_title_s"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_title"
                    android:gravity="center"
                    android:textColor="@color/font_3"
                    android:textSize="@dimen/x26" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:lineSpacingExtra="@dimen/y6"
                android:paddingBottom="@dimen/y40"
                android:paddingLeft="@dimen/x32"
                android:paddingRight="@dimen/x32"
                android:paddingTop="@dimen/y30"
                android:textColor="@color/font_3"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/tv_major_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/y40"
                android:paddingLeft="@dimen/x30"
                android:paddingTop="@dimen/y30"
                android:text="开设课程"
                android:textColor="@color/font_1"
                android:textSize="@dimen/x26"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>