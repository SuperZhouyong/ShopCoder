<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel_left"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y88"
        android:layout_alignBottom="@+id/part1"
        android:layout_alignTop="@+id/part1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_check_box"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/y34"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x20"
            android:scaleType="fitXY"
            android:src="@mipmap/select_off" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_toRightOf="@id/rel_left">

        <TextView
            android:id="@+id/tv_pro_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_marginLeft="@dimen/x30"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/x530"
            android:gravity="center_vertical"
            android:text="UI设计师"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/y43"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/collected" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>