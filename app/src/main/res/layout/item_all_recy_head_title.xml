<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/yv_all_recy_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/y19"
        android:paddingTop="@dimen/y30"
        android:text="艺术家拍品"
        android:textColor="@color/font_1"
        android:textSize="@dimen/x34" />

    <RelativeLayout
        android:visibility="gone"
        android:gravity="center_vertical"
        android:id="@+id/rel_acount"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/y107"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">


        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@id/iv_account"
            android:text="查看全部"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/list_right" />


    </RelativeLayout>

</RelativeLayout>