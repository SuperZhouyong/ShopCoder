<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/y30">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/y20"
        android:paddingTop="@dimen/y20">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/x4"
            android:layout_height="@dimen/y45"
            android:background="@color/app_main" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="志愿信息"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_choosesubject"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88">

        <TextView
            android:id="@+id/tv_choosesubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="选考科目"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/iv_next_choosesubject"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_back_right" />

        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="end|right|center_vertical"
            android:id="@+id/tv_choosesubject_content"
            android:layout_width="@dimen/x246"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@id/iv_next_choosesubject"
            android:ellipsize="end"
            android:textColor="@color/font_1"

            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/divider" />
    <RelativeLayout
        android:id="@+id/rel_Target_provinces"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88">

        <TextView
            android:id="@+id/tv_Target_provinces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="目标省份"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/iv_next_Target_provinces"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_back_right" />

        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/tv_Target_provinces_content"
            android:layout_width="@dimen/x246"
            android:layout_height="wrap_content"
            android:gravity="end|right|center_vertical"
            android:layout_alignParentBottom="true"
          android:layout_toLeftOf="@id/iv_next_Target_provinces"

            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/x30"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rel_Target_school"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88">

        <TextView
            android:id="@+id/tv_Target_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="目标院校"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/iv_next_Target_school"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_back_right" />

        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/tv_Target_school_content"
            android:layout_width="@dimen/x246"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@id/iv_next_Target_school"
            android:ellipsize="end"
            android:textColor="@color/font_1"
            android:gravity="end|right|center_vertical"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/divider" />
    <RelativeLayout
        android:id="@+id/rel_Target_major"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88">

        <TextView
            android:id="@+id/tv_Target_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="目标专业"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/iv_next_Target_major"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_back_right" />

        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/tv_Target_major_content"
            android:layout_width="@dimen/x246"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@id/iv_next_Target_major"
            android:ellipsize="end"
            android:textColor="@color/font_1"
            android:gravity="end|right|center_vertical"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/divider" />
    <RelativeLayout
        android:id="@+id/rel_voluntary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88">

        <TextView
            android:id="@+id/tv_voluntary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="志愿表"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/iv_next_voluntary"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/icon_back_right" />

        <TextView
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/tv_voluntary_content"
            android:layout_width="@dimen/x246"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_toLeftOf="@id/iv_next_voluntary"
            android:ellipsize="end"
            android:textColor="@color/font_1"
            android:gravity="end|right|center_vertical"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/divider" />
</LinearLayout>