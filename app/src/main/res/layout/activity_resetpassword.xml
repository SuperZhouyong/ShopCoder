    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y50"
        android:background="@color/app_bottom_colour"
        android:gravity="center">


        <RelativeLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_below="@id/login_icon"

            android:background="@drawable/login_shape_unfocus"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"

                android:layout_marginLeft="@dimen/x30"
                android:src="@mipmap/regist_phone" />

            <com.intention.sqtwin.widget.ClearEditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y88"
                android:layout_toRightOf="@id/iv_phone"
                android:background="@null"
                android:hint="请输入注册手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30"
                android:textColor="@color/account_textcolor_focus"
                android:textColorHint="@color/account_textcolor_unfocus"
                android:textCursorDrawable="@drawable/shape_edittext_cursour"
                android:textSize="@dimen/x26" />
            <!--<TextView
                style="@style/phone_password_login_regist"
                android:layout_marginLeft="@dimen/x30"
                android:text="手机号" />-->
        </RelativeLayout>
        <!-- // 验证码布局-->
        <RelativeLayout
            android:id="@+id/auth_code_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y88"
            android:layout_below="@id/username_layout"

            android:background="@drawable/login_shape_unfocus">

            <!--   <ImageView
                android:layout_width="@dimen/x38"
                android:layout_height="@dimen/y40"
                android:layout_gravity="left|center_vertical"
