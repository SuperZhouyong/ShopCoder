<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y96"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rel_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/y40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:scaleType="fitCenter"
            android:src="@mipmap/list_return" />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_close"
        android:layout_toRightOf="@id/rel_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/x30">

        <ImageView
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/y34"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:scaleType="fitCenter"
            android:src="@mipmap/close_ac" />

    </RelativeLayout>

    <TextView

        android:id="@+id/tool_title_left"
        style="@style/phone_password_login_regist"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rel_close"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/x200"
        android:textSize="@dimen/x36" />

    <TextView
        android:id="@+id/tool_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:text="注册"
        android:textColor="@color/font_1"
        android:textSize="@dimen/x30" />
</RelativeLayout>
