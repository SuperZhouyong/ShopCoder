<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pos_goods"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y360"
            android:layout_marginLeft="@dimen/x22"

            android:layout_marginRight="@dimen/x22"
            android:layout_marginTop="@dimen/y20"
            android:background="@color/orange" />
        <RelativeLayout
            android:id="@+id/rel_time_d"
            android:layout_width="@dimen/x234"
            android:layout_height="@dimen/y40"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x22"
            android:layout_alignBottom="@id/iv_pos_goods"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x22"
            android:background="@drawable/shape_time_countdown">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:background="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_toRightOf="@id/iv_time"
                android:text="距结束  9时30分"
                android:textColor="@color/font_2" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_filed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x22"
            android:paddingBottom="@dimen/y10"
            android:paddingTop="@dimen/y10"
            android:text="青花瓷拍卖专场"
            android:textColor="@color/font_1"
            android:textSize="@dimen/x35" />



    </RelativeLayout>
</LinearLayout>