<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/x30">

                    <ImageView
                        android:layout_width="@dimen/x22"
                        android:layout_height="@dimen/y40"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/list_return" />
                </LinearLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/ll_back"
                    android:text="选择目标院校/专业"
                    android:textColor="@color/textcolor1"
                    android:textSize="@dimen/x36" />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/title"
                    android:text="(3/4)"
                    android:textColor="@color/textcolor2"
                    android:textSize="@dimen/x30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_unfocus" />
            </RelativeLayout>


            <com.flipboard.bottomsheet.BottomSheetLayout
                android:id="@+id/bottomSheetLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rl_shop_cart"
                android:layout_below="@id/rl_title"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/rl_title">


                        <android.support.design.widget.AppBarLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/y124"
                                android:background="@color/white"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/x30"
                                tl:layout_scrollFlags="enterAlwaysCollapsed|scroll|snap">

                                <TextView
                                    android:id="@+id/tv_major_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/font_1"
                                    android:textSize="@dimen/x28" />

                                <TextView
                                    android:id="@+id/tv_major_info"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_major_name"
                                    android:layout_marginTop="@dimen/x10"
                                    android:text=""
                                    android:textColor="@color/font_3"
                                    android:textSize="@dimen/x24" />
                            </RelativeLayout>

                            <include layout="@layout/division_long" />
                        </android.support.design.widget.AppBarLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tl:layout_behavior="@string/appbar_scrolling_view_behavior">

                            <LinearLayout
                                android:id="@+id/ll_Gone"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/y80"
                                android:background="@color/white"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:id="@+id/ll_major"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_major"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="专业对口率"
                                        android:textColor="@color/font_2"
                                        android:textSize="@dimen/x28" />

                                    <ImageView
                                        android:id="@+id/iv_major"
                                        android:layout_width="@dimen/x26"
                                        android:layout_height="@dimen/y23"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/x10"
                                        android:src="@mipmap/sort_no" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_salary"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_salary"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="平均薪资"
                                        android:textColor="@color/font_2"
                                        android:textSize="@dimen/x28" />

                                    <ImageView
                                        android:id="@+id/iv_salary"
                                        android:layout_width="@dimen/x26"
                                        android:layout_height="@dimen/y23"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/x10"
                                        android:src="@mipmap/sort_no" />


                                </LinearLayout>

                                <ImageView
                                    android:layout_width="1px"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="@dimen/y20"
                                    android:layout_marginTop="@dimen/y20"
                                    android:background="@color/font_3" />

                                <LinearLayout
                                    android:id="@+id/ll_filtrate"
                                    android:layout_width="@dimen/x150"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tv_filtrate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="筛选"
                                        android:textColor="@color/font_2"
                                        android:textSize="@dimen/x28" />

                                    <ImageView
                                        android:id="@+id/iv_filtrate"
                                        android:layout_width="@dimen/x26"
                                        android:layout_height="@dimen/y26"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/x10"
                                        android:src="@mipmap/filtrate_no" />
                                </LinearLayout>

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.github.jdsjlzx.recyclerview.LRecyclerView
                                    android:id="@+id/recycle_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/app_bottom_colour" />

                                <com.intention.sqtwin.widget.conmonWidget.LoadingTip
                                    android:id="@+id/loading_tip"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </RelativeLayout>

                        </LinearLayout>

                    </android.support.design.widget.CoordinatorLayout>
                </LinearLayout>
            </com.flipboard.bottomsheet.BottomSheetLayout>


            <RelativeLayout
                android:id="@+id/rl_shop_cart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y88"
                android:layout_alignParentBottom="true"
                android:background="#6a6a6a">

                <TextView
                    android:id="@+id/major_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x150"
                    android:gravity="center"
                    android:text="0个目标专业"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="@dimen/x200"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/app_main"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x30" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_plane"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/y16"
                android:layout_marginLeft="@dimen/x26"
                android:background="@mipmap/icon_goal_no" />

            <com.intention.sqtwin.widget.conmonWidget.LoadingTip
                android:id="@+id/load_tip_out"
                android:layout_below="@id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_recyView"
            android:layout_width="@dimen/x570"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white">

            <fragment
                android:id="@+id/fragment_id"
                class="com.intention.sqtwin.ui.homepage.fragment.DiagnoseFilterFragment"
                android:layout_width="@dimen/x570"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>